@model DeskEntity.Model.ReservedSeat
@{
    ViewData["Title"] = "EditSeat";
}

<h1>EditSeat</h1>

<div>
    <a asp-controller="BookingSeat" asp-action="AllSeats" AllSeats></a>

</div>

<form method="post" enctype="multipart/form-data">
    <h2>Booking</h2><hr />

    <div class="form-group">
        <label>ReservedSeatId</label>
        <input type="date" asp-for="ReservedSeatId" class="form-control"
               placeholder="enter User Id" required />
    </div>

    <div class="form-group">
        <label>SeatId</label>
        <input type="text" asp-for="SeatId" class="form-control"
               placeholder="enter seatstatus" required />
    </div>

    <div class="form-group">
        <label>BookingSeat</label>
        <input type="text" asp-for="BookingSeatId" class="form-control"
               placeholder="enter Show Id" required />
    </div>
   
  
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.Status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message;
        </div>
    }

    else if (ViewBag.Status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message;
        </div>
    }
</form>

