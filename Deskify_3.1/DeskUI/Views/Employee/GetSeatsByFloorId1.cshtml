
@{
    ViewData["Title"] = "GetSeatsByFloorId1";
}

<h1>GetSeatsByFloorId1</h1>

@{
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

@model DeskEntity.Model.BookingRoom


<div>
    <a asp-controller="BookingRoom" asp-action="Index">Booking Room</a>

</div>

<form method="post" enctype="multipart/form-data">



    <div class="form-group">
        <label>Room</label>
        <select asp-for="RoomId" class="form-control" asp-items="@ViewBag.roomlist" required></select>
    </div>


    <div class="col-12 mt-5" style="margin-left:510px">
        <button type="reset" class="btn btn-outline-secondary float-end me-2">Reset</button>
        <button type="submit" class="btn btn-primary float-end">Book Seat</button>
    </div>

    <hr />
    @if (ViewBag.Status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message;
        </div>
    }

    else if (ViewBag.Status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message;
        </div>
    }
</form>
