                                <th>Action</th>*@
                            </tr>
                        </thead>
                        <tbody>
                           
                                    <tr>

                                        <td>@Model.BookingSeatId</td>
                                        <td>@Model.Employee.EmployeeName</td>
                                        <td>@Model.Employee.PhoneNumber</td>
                                        <td>@Model.Employee.Role</td>
                                        <td>@Model.FromDate.ToShortDateString()</td>
                                        <td>@Model.ToDate.ToShortDateString()</td>
                                        <td>@Model.Seat.SeatNumber</td>
                                        @if (Model.SeatStatus == 1)
                                        {
                                            <td>Approved</td>
                                        }
                                        else if (Model.SeatStatus == 0)
                                        {
                                            <td>Cancelled</td>
                                        }
                                        @*else if (doctor.Appointment_Status == 2)
                                        {
                                            <td>Pending</td>
                                        }
                                        else if (doctor.Appointment_Status == 3)
                                        {
                                            <td>Completed</td>
                                        }
                                        else if (doctor.Appointment_Status == 4)
                                        {
                                            <td>Rejected</td>
                                        }*@

                                        <td>@Model.Employee.EmployeeNumber</td>
                                       @* @if (doctor.Bill_Status == 0)
                                        {
                                            <td>Unpaid</td>
                                        }
                                        else if (doctor.Bill_Status == 1)
                                        {
                                            <td>Paid</td>
                                        }
                                        <td><a class="btn btn-info " asp-controller="Employee" asp-action="Prescription" asp-route-AppointmentId="@doctor.AppointID">Prescription</a></td>*@
                                    </tr>
                                
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </body>
    </html>

