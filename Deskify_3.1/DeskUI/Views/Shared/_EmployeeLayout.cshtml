<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Deskify</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.css">
    <script src="https://kit.fontawesome.com/bf21391385.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert-dev.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light font-weight-bold" style="background-color:black" ;>
            <div class="container-fluid">
                <img class="hm-logo" alt="" style="height:80px" src="~/img/deskify_logo.svg" />
                <a class="navbar-brand" asp-area="" asp-controller="Employee" style="color:white;font-size:xx-large" asp-action="Index">Deskify_</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"><i class="fa fa-navicon" aria-hidden="true" style="color:#fff; font-size:28px"></i></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        @*<li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Admin" asp-action="ScanQR">ScanQR</a>
                        </li>*@
                    </ul>
                </div>
                <div class="nav-item">
                    <a class="nav-link text-uppercase" asp-area="" asp-controller="Employee" asp-action="Notification" style="font-size:large">
                        <img class="img-fluid" style="height:28px;margin-right:20px" src="https://www.svgrepo.com/show/18861/bell.svg">
                        <sup class="badge badge-danger" style="color:#f0f8ff;font-size:16px;margin-left:-27px;padding:4px">@TempData["Count"]</sup>
                    </a>
                </div>
                <div class="nav-item" style="margin-right:20px">
                    <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:#f0f8ff"><img class="img-fluid" style="height:28px" src="https://www.svgrepo.com/show/213315/avatar-profile.svg"></a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="Profile"><img class="img-fluid" style="height:20px" src="https://www.svgrepo.com/show/318484/profile.svg">&nbsp; Profile</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="ViewPassSeat"><img class="img-fluid" style="height:20px" src="https://www.svgrepo.com/show/383214/school-staff-pass-id-teacher.svg">&nbsp; View Seat Pass</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Employee" asp-action="ViewPassRoom"><img class="img-fluid" style="height:20px" src="https://www.svgrepo.com/show/383214/school-staff-pass-id-teacher.svg">&nbsp; View Room Pass</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index" style="color:red">&nbsp;<img class="img-fluid" style="height:14px" src="https://www.svgrepo.com/show/79009/logout.svg">&nbsp; Logout</a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted" style="background-color:black">
        <div class="container">
            &copy; 2023 Deskify. All Rights Reserved.<a asp-area="" asp-controller="Home" asp-action="Privacy"></a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
