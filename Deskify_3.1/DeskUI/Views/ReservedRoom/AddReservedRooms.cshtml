@model DeskEntity.Model.ReservedRoom

@{
    ViewData["Title"] = "AddReservedRooms";
}

<div>
    <hr />
    <a asp-controller="ReservedRoom" asp-action="Index">Index</a>
    <hr />
</div>

<form method="post" enctype="multipart/form-data">
    <h2>Add ReservedRoom</h2>
   
    <div class="form-group">
        <label> RoomId </label>
        <input type="text" asp-for="RoomId" class="form-control" placeholder="enter RoomId" required />
    </div>
    <div class="form-group">
        <label> Room </label>
        <input type="text" asp-for="Room" class="form-control" placeholder="enter Room" required />
    </div>   

    <div class="form-group">
        <label> BookingRoomId </label>
        <input type="text" asp-for="BookingRoomId" class="form-control" placeholder="enter BookingRoomId" required />
    </div>
    <div class="form-group">
        <label> BookingRoom </label>
        <input type="text" asp-for=" BookingRoom" class="form-control" placeholder="enter BookingRoom" required />
    </div>


    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

